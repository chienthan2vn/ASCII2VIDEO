{
    "version": "2.0.0",
    "tasks": [
        {
            "group": "build",
            "type": "shell",
            "label": "make all",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "mingw32-make"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "make"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "make"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
        },
        {
            "group": "build",
            "label": "make clean",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "mingw32-make",
                    "clean"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "make",
                    "clean"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "make",
                    "clean"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "group": "build",
            "label": "make run",
            "windows": {
                "command": "powershell",
                "args": [
                    "-c",
                    "mingw32-make",
                    "run"
                ]
            },
            "linux": {
                "command": "bash",
                "args": [
                    "-c",
                    "make",
                    "run"
                ]
            },
            "osx": {
                "command": "bash",
                "args": [
                    "-c",
                    "make",
                    "run"
                ]
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}
